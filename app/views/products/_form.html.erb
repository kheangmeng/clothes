<div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Product Form</h3>
                    </div>
          <div class="panel-body">

<%= form_for(product, :html => { multipart: true }) do |f| %><!--multiple image -->
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codename %>
    <%= f.text_field :codename, class:"form-control", placeholder:"Codename" %>
  </div>

  <div class="form-group">
    <%= f.label :quentity %>
    <%= f.number_field :quentity, max:100, min:1, class:"form-control", placeholder:"Quentity" %>
  </div>

  <div class="form-group">
    <%= f.label :size %>
    <%= f.text_field :size, class:"form-control", placeholder:"Size" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class:"form-control", placeholder:"Price" %>
  </div>

  <div class="form-group">
    <%= f.label :discount %>
    <%= f.text_field :discount, class:"form-control", placeholder:"Discount" %>
  </div>

   <div class="form-group">
    <%= f.label :Category_id %>
    <%= f.text_field :Category_id, class:"form-control", placeholder:"Category_id" %>
  </div>

  <div class="form-group">
    <%= f.label :Brand_id %>
    <%= f.text_field :Brand_id, class:"form-control", placeholder:"Brand_id" %>
  </div>

  <div class="form-group">
    <%= f.label :Color_id %>
    <%= f.text_field :Color_id, class:"form-control", placeholder:"Color_id" %>
  </div>
  <div class="form-group">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
  </div>
  <div class="col-lg-12 col-md-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-comments fa-5x"></i>
                                </div>
                                <div class="col-xs-6 ">
                                    
                                    <div>Last images</div>
                                </div>
                            </div>
                        </div>
                        
      
                            <div class="panel-body">
                              <% onlythree = 0 %>
                              <% product.images.each do |p| %>
                                <% onlythree += 1 %>
                                <% if onlythree <= 3 %>
                                  <div class="col-xs-4">
                                    <%= image_tag(p, size: "100x150") %>
                                  </div>
                                <% end %>
                              <% end %>  
                            </div>
                    </div>
                </div>
                <br />
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>


   </div>
      </div>
    </div>
  </div>
</div>