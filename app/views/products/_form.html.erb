<%= form_for(product, :html => { multipart: true }) do |f| %><!--multiple image -->
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :codename %>
    <%= f.text_field :codename %>
  </div>

  <div class="field">
    <%= f.label :quentity %>
    <%= f.number_field :quentity %>
  </div>

  <div class="field">
    <%= f.label :size %>
    <%= f.text_field :size %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :discount %>
    <%= f.text_field :discount %>
  </div>

  <div class="field">
    <%= f.label :Category_id %>
    <%= f.text_field :Category_id %>
  </div>

  <div class="field">
    <%= f.label :Brand_id %>
    <%= f.text_field :Brand_id %>
  </div>

  <div class="field">
    <%= f.label :Color_id %>
    <%= f.text_field :Color_id %>
  </div>
  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
