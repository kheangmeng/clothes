<% if current_user.admin === true %>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= sort_link @search, :codename, "Codename", class:"btn btn-link" %></th>
        <th><%= sort_link @search, :quentity, "Quentity" %> </th>
        <th>Size</th>
        <th><%= sort_link @search, :price, "Price" %> </th>
        <th>Discount</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.codename %></td>
          <td><%= product.quentity %></td>
          <td><%= product.size %></td>
          <td><%= product.price %></td>
          <td><%= product.discount %></td>
          <td><%= product.Category.name %></td>
          <td><%= product.Brand.name %></td>
          <td><%= product.Color.name %></td>
          <td><%= link_to 'Show', product, class:"btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-link" %></td>
          <td><%= link_to 'Destroy', product,class:"btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>    
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Product', new_product_path, class:"btn btn-success" %>
<% else %>
  <h1>You're not have a permission to access this page </h1>  
<% end %>
