<p>
  <strong>Codename:</strong>
  <%= @product.codename %>
</p>

<p>
  <strong>Quentity:</strong>
  <%= check_stock(@product) %>
</p>

<p>
  <strong>Size:</strong>
  <%= @product.size %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <strong>Discount:</strong>
  <%= check_discount(@product) %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.Category.name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.Brand.name %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.Color.name %>
</p>

<% @product.images.each do |p| %>
<p>
  <strong>img:</strong>
  <%= image_tag(p) %>
</p>
<!-- <p>
  <strong>img:</strong>
  <%= image_tag(@product.images[0]) %>
</p> -->
<% end %>
<% if user_signed_in? %>
  <% if current_user.admin === true %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>
<% end %>  
<%= link_to 'Back', products_path %>
