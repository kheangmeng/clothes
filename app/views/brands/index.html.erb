<% if current_user.admin.eql?(true)  %>
  <h1>Brands</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Brand', new_brand_path %>

<% else %>

  <h1>You don't have permission to access this page</h1>

<% end %>
