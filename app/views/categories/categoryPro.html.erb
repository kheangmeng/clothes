
<h1>Products Type</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th>Quentity</th>
      <th>Color</th>
      <th>Price</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myProducts.each do |pro| %>
      <tr>
        <td><%= pro.codename %></td>
        <td><%= pro.size %></td>
        <td><%= check_stock(pro) %></td>
				<td><%= pro.Color.name %></td>
				<td><%= number_to_currency(pro.price) %></td>
        <td><%= check_discount(pro) %></td>
      </tr>
    <% end %>
  </tbody>
</table>